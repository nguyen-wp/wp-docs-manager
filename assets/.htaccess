# Prevent direct access to files in this directory
# Allow only specific file types
<Files "*">
    Order Deny,Allow
    Deny from all
</Files>

# Allow only safe file types
<FilesMatch "\.(pdf|doc|docx|txt|xls|xlsx|ppt|pptx|jpg|jpeg|png|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Prevent execution of PHP scripts
<FilesMatch "\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Disable directory browsing
Options -Indexes

# Prevent access to sensitive files
<FilesMatch "(\.htaccess|\.htpasswd|\.log|\.sql|\.bak|\.backup)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>
