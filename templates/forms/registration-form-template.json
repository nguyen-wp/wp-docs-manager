{
    "name": "User Registration Form",
    "description": "Complete user registration form with account setup and preferences",
    "form_header": "<div style=\"background: #28a745; color: white; padding: 20px; text-align: center; border-radius: 8px 8px 0 0;\"><h2 style=\"margin: 0; color: white;\">Create Your Account</h2><p style=\"margin: 10px 0 0 0; color: #e8f5e9;\">Join our community and get access to exclusive features</p></div>",
    "form_footer": "<div style=\"background: #f8f9fa; padding: 15px; text-align: center; border-radius: 0 0 8px 8px; border-top: 1px solid #dee2e6;\"><p style=\"margin: 0; color: #6c757d; font-size: 12px;\">By registering, you agree to our <a href=\"#\" style=\"color: #007bff;\">Terms of Service</a> and <a href=\"#\" style=\"color: #007bff;\">Privacy Policy</a>.<br>Already have an account? <a href=\"#\" style=\"color: #007bff; font-weight: 500;\">Sign in here</a></p></div>",
    "fields": [
        {
            "type": "text",
            "label": "First Name",
            "name": "first_name",
            "placeholder": "Enter your first name",
            "required": true,
            "validation": {
                "min_length": 2,
                "max_length": 50
            }
        },
        {
            "type": "text",
            "label": "Last Name",
            "name": "last_name",
            "placeholder": "Enter your last name",
            "required": true,
            "validation": {
                "min_length": 2,
                "max_length": 50
            }
        },
        {
            "type": "text",
            "label": "Username",
            "name": "username",
            "placeholder": "Choose a unique username",
            "required": true,
            "help_text": "3-20 characters, letters, numbers, and underscores only",
            "validation": {
                "min_length": 3,
                "max_length": 20,
                "pattern": "^[a-zA-Z0-9_]+$"
            }
        },
        {
            "type": "email",
            "label": "Email Address",
            "name": "email",
            "placeholder": "your.email@example.com",
            "required": true,
            "help_text": "We'll use this for account verification and communications",
            "validation": {
                "email": true
            }
        },
        {
            "type": "text",
            "label": "Phone Number",
            "name": "phone",
            "placeholder": "(555) 123-4567",
            "required": false,
            "help_text": "Optional - for account security and updates"
        },
        {
            "type": "select",
            "label": "Country",
            "name": "country",
            "required": true,
            "options": [
                {"value": "", "label": "Select your country..."},
                {"value": "US", "label": "United States"},
                {"value": "CA", "label": "Canada"},
                {"value": "UK", "label": "United Kingdom"},
                {"value": "AU", "label": "Australia"},
                {"value": "DE", "label": "Germany"},
                {"value": "FR", "label": "France"},
                {"value": "JP", "label": "Japan"},
                {"value": "OTHER", "label": "Other"}
            ]
        },
        {
            "type": "radio",
            "label": "Account Type",
            "name": "account_type",
            "required": true,
            "help_text": "You can upgrade or change this later",
            "options": [
                {"value": "personal", "label": "Personal - For individual use"},
                {"value": "business", "label": "Business - For organizations"},
                {"value": "developer", "label": "Developer - For technical users"}
            ]
        },
        {
            "type": "checkbox",
            "label": "Interests",
            "name": "interests",
            "required": false,
            "help_text": "Help us personalize your experience",
            "options": [
                {"value": "technology", "label": "Technology & Innovation"},
                {"value": "business", "label": "Business & Finance"},
                {"value": "marketing", "label": "Marketing & Sales"},
                {"value": "design", "label": "Design & Creative"},
                {"value": "education", "label": "Education & Training"},
                {"value": "health", "label": "Health & Wellness"}
            ]
        },
        {
            "type": "checkbox",
            "label": "Communication Preferences",
            "name": "communication_prefs",
            "required": false,
            "options": [
                {"value": "email_notifications", "label": "Email notifications for important updates"},
                {"value": "newsletter", "label": "Weekly newsletter with tips and news"},
                {"value": "promotional", "label": "Promotional offers and discounts"},
                {"value": "product_updates", "label": "New feature announcements"}
            ]
        },
        {
            "type": "checkbox",
            "label": "Terms and Conditions",
            "name": "terms_agreement",
            "required": true,
            "options": [
                {"value": "agree", "label": "I agree to the Terms of Service and Privacy Policy"}
            ]
        }
    ]
}
