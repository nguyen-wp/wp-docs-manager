{
    "name": "Customer Feedback Form",
    "description": "Collect valuable customer feedback and ratings with this comprehensive form",
    "form_header": "<div style=\"background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 20px; text-align: center; border-radius: 8px; margin-bottom: 20px;\"><h2 style=\"margin: 0; color: white;\">We Value Your Feedback</h2><p style=\"margin: 10px 0 0 0; color: #f0f0f0;\">Help us improve our services by sharing your experience</p></div>",
    "form_footer": "<div style=\"background: #f8f9fa; padding: 15px; border-radius: 6px; text-align: center; margin-top: 20px;\"><p style=\"margin: 0; color: #6c757d; font-size: 13px;\">Thank you for taking the time to provide feedback. Your input helps us serve you better!</p></div>",
    "fields": [
        {
            "type": "text",
            "label": "Your Name",
            "name": "customer_name",
            "placeholder": "Enter your name (optional)",
            "required": false
        },
        {
            "type": "email",
            "label": "Email Address",
            "name": "email",
            "placeholder": "your.email@example.com",
            "required": false,
            "help_text": "Optional - only if you'd like us to follow up"
        },
        {
            "type": "radio",
            "label": "Overall Satisfaction",
            "name": "satisfaction_rating",
            "required": true,
            "options": [
                {"value": "5", "label": "⭐⭐⭐⭐⭐ Excellent"},
                {"value": "4", "label": "⭐⭐⭐⭐ Very Good"},
                {"value": "3", "label": "⭐⭐⭐ Good"},
                {"value": "2", "label": "⭐⭐ Fair"},
                {"value": "1", "label": "⭐ Poor"}
            ]
        },
        {
            "type": "select",
            "label": "Service/Product Category",
            "name": "category",
            "required": true,
            "options": [
                {"value": "", "label": "Select category..."},
                {"value": "customer_service", "label": "Customer Service"},
                {"value": "product_quality", "label": "Product Quality"},
                {"value": "website", "label": "Website Experience"},
                {"value": "delivery", "label": "Delivery/Shipping"},
                {"value": "pricing", "label": "Pricing"},
                {"value": "other", "label": "Other"}
            ]
        },
        {
            "type": "textarea",
            "label": "What did we do well?",
            "name": "positive_feedback",
            "placeholder": "Tell us what you liked about your experience...",
            "required": false,
            "rows": 3
        },
        {
            "type": "textarea",
            "label": "How can we improve?",
            "name": "improvement_suggestions",
            "placeholder": "Share your suggestions for improvement...",
            "required": false,
            "rows": 3
        },
        {
            "type": "checkbox",
            "label": "Would you recommend us?",
            "name": "recommendation",
            "required": false,
            "options": [
                {"value": "yes", "label": "Yes, I would recommend your services to others"}
            ]
        },
        {
            "type": "radio",
            "label": "How likely are you to use our services again?",
            "name": "likelihood_return",
            "required": false,
            "options": [
                {"value": "very_likely", "label": "Very Likely"},
                {"value": "likely", "label": "Likely"},
                {"value": "neutral", "label": "Neutral"},
                {"value": "unlikely", "label": "Unlikely"},
                {"value": "very_unlikely", "label": "Very Unlikely"}
            ]
        }
    ]
}
